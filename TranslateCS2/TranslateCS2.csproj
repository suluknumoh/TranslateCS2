  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\Icons\appicon.ico" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\README.md" />
    <EmbeddedResource Include="Assets\Translations.sqlite" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Icons\add.png" />
    <Resource Include="Assets\Icons\appicon.ico" />
